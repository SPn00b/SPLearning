<configuration>
    <appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{2} - %msg%n"/>
        </Console>
        <!-- add more appenders here like FileAppender, RollingFileAppender, etc -->
    </appenders>

    <loggers>
        <root level="debug">
            <AppenderRef ref="console"/>
            <!-- Add more appenders as needed -->
        </root>
    </loggers>
</configuration>